  border: solid;
  border-width: .5px;
  border-radius: 25px;
  border-color: #0000000a;
  padding: 50px;
  margin-bottom: 50px;
  background-color: rgba(255, 255, 255, 0.397);
  backdrop-filter: blur(10px);
  box-shadow: 1px 1px 4px .8px rgba(40, 40, 43, 0.2); 
 
}

