---
interface Props{
    title:string;
    text:string;
    button:string;
href:string;
}

const {title, text, href, button} = Astro.props;
---

<div class="content-Get">

    <h2>
        {title}
    </h2>

    <p>
        {text}
    </p>

    <a href={href}>
        {button}
       </a>

    </div>
