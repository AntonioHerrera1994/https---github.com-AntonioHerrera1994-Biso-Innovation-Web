---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" , initial-scale=1" />
		<link rel="icon" href="cropped-favicon.ico" type="image/x-icon">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			@import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100&display=swap');
			@import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@100;200;300;400;500;600;700&display=swap');
		  </style>
	</head>
	<body>
    <!-- Start Header-->
		<header class="biso-header">
			<div class="header-cont">
			  <div class="header-grid">
				<div class="head-logo">
				  <img class="header-img" 
				  src="https://i2.wp.com/bisoinnovation.com/wp-content/uploads/2021/09/cropped-BISO-INNOVATION-LOGO.png?resize=300%2C96&ssl=1"
				  alt="BisoInnovation"
				  />
				</div>
			   <!-- <div class="head-boton">
				  <p class="buttonhead"><a href="#" style="color: black; font-size: 18px; text-transform: none;text-align: right;">
					Iniciemos
				  </a>
				</div>-->
			  </div>
			</div>
		  </header>
		  <!-- End Header-->
		<slot />
	</body>
</html>
<style is:global>
	 /* Start Header */
   .biso-header{
 padding-bottom: 0px;
 border-bottom:solid;
 border-width: 1px;
 border-color: #0000000a;
 margin:-15px;
 position: sticky;
top: 0px;
background-color: #fdfdfd;
z-index: 1;
}
.header-cont{
  width: 1200px;
  margin: 0 auto;
  overflow: hidden;
  padding-right: 50px;
  padding-left: 50px;
  
}

.header-grid{
  padding: 2rem;
  display:grid;
  grid-template-columns: repeat(2,minmax(0,1fr));
      gap: 2rem;
}

.header-img{
  width: 38%;
}

.buttonhead{
  text-align: center;
border: solid;
border-color: #ab8634;
border-width: 2px;
  padding:14px;
  border-radius: 15px;
  margin-left: 185px;
  margin-right: 185px;
  font-family: 'Josefin Sans', sans-serif;
}
/* End Header */

@media screen and (min-width:360px) and (max-width:736px) {
  /* Start Header */
  .header-cont{
    width: auto;
    padding-left: 20px;
    padding-right: 0px;
  }
  .header-grid{

    grid-template-columns: repeat(1,minmax(0,1fr));
    padding-left:10px;
    padding-right: 10px;
      
  }
.biso-header{
  margin: 0 auto;
top: 0px;
background-color: #fdfdfd;
margin-left: -8px;
  margin-right: -8px;

}

.header-img{
  width: 30%;
}

.btn-head{
 text-align: center;
 padding-bottom: 40px;
}
/* End Header */
}

</style>
